<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registered Members</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        list-style: none;
        text-decoration: none;
        font-family: sans-serif;
        color: white;
      }
      body {
        background-color: black;
      }
      nav ul {
        display: flex;
        float: right;
      }

      nav ul li a {
        color: white;
        margin: 10px;
        padding: 5px;
      }
      nav {
        background-color: green;
        padding: 30px;
      }

      nav p {
        color: white;
        font-size: 20px;
      }

      nav ul li a:hover {
        background-color: white;
        color: black;
        border-radius: 2px;
      }

      nav img {
        height: 50px;
        width: 50px;
        border-radius: 50%;
      }

      span {
        margin: 20px;
      }

      img {
        height: 100px;
        width: 100px;
        margin: 10px;
      }

      h1 {
        margin: 20px;
      }

      table {
        margin: 20px auto;
        border-collapse: collapse;
        width: 300px;
      }

      table tr th {
        padding: 10px;
        font-size: 25px;
      }

      table tr td {
        font-size: 20px;
        padding: 10px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <nav>
      <p>
        <img src="/images/logo.jpg" /><span
          >Welcome to Sports Zone, <%= name %>!</span
        >
      </p>
      <ul>
        <li><a href="/allEvents">All Events</a></li>
        <li><a href="/addEvent">Add Event</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
    <div>
      <h1>Title: <%= eventDetails.eventTitle %></h1>
      <img src="<%= eventDetails.eventImg %>" />
      <h1>Registered Members</h1>
      <table border="2px">
        <tr>
          <th>Id</th>
          <th>Name</th>
        </tr>
        <% memberList.forEach(member => { %>
        <tr>
          <td><%= member.id %></td>
          <td><%= member.fullname %></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
