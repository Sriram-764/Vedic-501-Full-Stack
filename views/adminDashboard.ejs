<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f1f1f1;
        color: #333;
      }

      nav {
        background-color: #1abc9c;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      nav img {
        height: 50px;
        width: 50px;
        border-radius: 50%;
        margin-right: 10px;
      }

      nav p {
        color: white;
        font-size: 20px;
        display: flex;
        align-items: center;
      }

      nav ul {
        display: flex;
        list-style-type: none;
      }

      nav ul li {
        margin-left: 20px;
      }

      nav ul li a {
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      nav ul li a:hover {
        background-color: #16a085;
      }

      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
      }

      .event {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 20px;
        padding: 20px;
        width: 300px;
        text-align: center;
        transition: transform 0.3s ease;
      }

      .event:hover {
        transform: translateY(-5px);
      }

      .event h2 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #333;
      }

      .event img {
        height: 150px;
        width: 150px;
        border-radius: 50%;
        margin: 0 auto 20px;
        display: block;
      }

      .event .link a {
        color: #1abc9c;
        text-decoration: none;
        display: block;
        margin-top: 10px;
        transition: color 0.3s ease;
      }

      .event .link a:hover {
        color: #16a085;
      }
    </style>
  </head>
  <body>
    <nav>
      <p>
        <img src="/images/logo.jpg" /><span
          >Welcome to Sports Zone, <%= name %>!</span
        >
      </p>
      <ul>
        <li><a href="/allEvents">All Events</a></li>
        <li><a href="/addEvent">Add Event</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div class="container">
      <% events.forEach(event => { %>
      <div class="event">
        <h2>Title: <%= event.eventTitle %></h2>
        <img src="<%= event.eventImg %>" /><br />
        <div class="link">
          <a href="/viewEvent/<%= event.id %>">Event Details</a> <br />
        </div>
        <div class="link">
          <a href="/registeredMembers/<%= event.id %>">Event Participants</a>
        </div>
      </div>
      <% })%>
    </div>
  </body>
</html>
